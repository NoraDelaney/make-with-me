<div class="row">
  <div class="columns small-2">
    <div class="img_space">
      <%= image_tag(@user.profile_photo_url(:thumb)) %>
    </div>
  </div>
  <div class="columns small-10">
    <h1> <%= @user.username %> </h1>
  </div>
</div>
<div class="row">
  <div class="columns large-12">
    <div class="panel">
      <span><b>First name:</b> <%= @user.first_name %></span><br />
      <span><b>Last name:</b> <%= @user.last_name %></span><br />
      <span><b>City:</b> <%= @user.city %></span><br />
      <span><b>State:</b> <%= @user.state %></span><br />
      <% if @user.website != nil %>
      <span><b>Website:</b> <%= @user.website %></span><br />
      <% end %>
      <% if @user.description != nil %>
          <span><b>About me:</b> <%= @user.description %></span><br />
      <% end %>
    </div>
  </div>
</div>

<% if current_user && current_user.id != @user.id %>
  <% if current_user.liked? @user %>
  <%= link_to "Undo", dislike_user_path(@user), class: 'vote', method: :put, remote: true, data: { toggle_text: 'Favorite', toggle_href: like_user_path(@user), id: @user.id } %>
  <% else %>
  <%= link_to "Favorite", like_user_path(@user), class: 'vote', method: :put, remote: true, data: { toggle_text: 'Undo', toggle_href: dislike_user_path(@user), id: @user.id } %>
  <% end %>
  <span class="votes-count" data-id="<%= @user.id %>">
  <%= @user.get_likes.size %>
</span>
  favorites.
  <% end %>

<div class="row">
  <div class="columns small-3">
    <% if current_user && current_user.id == @user.id %>
      <%= link_to "Edit Profile", edit_user_path(@user), class: "button small radius" %>
    <% end %>
  </div>
  <div class="columns small-3">
    <% if current_user && current_user.id == @user.id %>
      <%= link_to "Add an Image", new_user_user_file_path(@user), class: "button left small radius" %><br />
    <% end %>
  </div>
  <div class="columns small-3">
    <% if current_user && current_user.id == @user.id %>
      <%= link_to "Add a PDF", new_user_pdf_path(@user), class: "button left small radius" %><br />
    <% end %>
  </div>
</div>
</div>

<% if !@user_files.empty? %>
<div class="row">
  <div class="columns large-12">
    <div class="panel">
      <h3 class="portfolio_text">Images</h3>
  <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
    <% @user_files.each do |file| %>
    <li>
        <div class='user_number' style="visibility: collapse">
          <%= @user.id %>
        </div>
        <div class='user_file_number' style="visibility: collapse">
          <%= file.id %>
      </div>


        <%= image_tag(file.file_url(:showcase)) %><br>

      <% if current_user && current_user.id == @user.id %>
        <%= link_to "Change", edit_user_user_file_path(@user, file),
        class: "portfolio button tiny radius" %>
        <%= link_to "Delete", user_user_file_path(@user, file),
        method: :delete, class: "portfolio button tiny radius" %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
</div>
</div>
<% end %>

<% if !@pdfs.empty? %>
<div class="panel">
<h3 class="portfolio_text">PDFs</h3>
<div class="row">
  <div class="columns large-12">
  <% @pdfs.each do |pdf| %>
  <div class="pdf_stuff">
<div class='user_number' style="visibility: collapse">
    <%= @user.id %>
  </div>
  <div class='pdf_number' style="visibility: collapse">
    <%= pdf.id %>
  </div>
    <% pdf.name %>
    <%= link_to pdf.name, pdf.user_pdf_url %><br>
    <% if current_user && current_user.id == @user.id %>
    <%= link_to "Change", edit_user_pdf_path(@user, pdf),
     class: "button tiny radius" %>
    <%= link_to "Delete", user_pdf_path(@user, pdf),
    method: :delete, class: "button tiny radius" %>
    <% end %>
  </div>
<% end %>
</div>
</div>
</div>
<% end %>
