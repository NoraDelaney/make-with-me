<div class="panel">
<%= form_for :message, url: reply_conversation_path(conversation) do |f| %>

  <%= f.label :subject %><br />
  <%= f.text_field :subject %>

  <%= f.label :body %><br />
  <%= f.text_field :body %>

  <%= f.submit "Submit", class: "button tiny radius" %>
  <%= f.submit 'Cancel', type: :reset, class: "button tiny radius" %>

</div>
<% end %>
